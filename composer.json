{
    "name": "mackstar/spout",
    "description":"A BEAR.Sunday based CMS",
    "license": "MIT",
    "keywords":[
        "PHP",
        "CMS"
    ],
    "authors":[
        {
            "name": "Richard McIntyre"
        }
    ],
    "require":{
        "bear/package":"dev-develop",
        "danielstjules/stringy": "1.*",
        "rhumsaa/uuid":"2.4",
        "robmorgan/phinx": "*",
        "imagine/imagine": "v0.5.0",
        "zendframework/zend-validator": "*"
    },
    "require-dev":{
        "bear/dev-package":"dev-master"
    },
    "scripts": {
        "post-update-cmd": "Mackstar\\Spout\\Tools\\Console\\Install::postUpdate"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload":{
        "psr-4":{
            "Mackstar\\Spout\\": "src/"
        }
    },
    "extra": {
        "installer-paths": {
            "apps/{$name}/": ["type:bearsunday-app"]
        }
    }
}
