{% extends "layout/default.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block h1 %}{{ title }}{% endblock %}
{% block page %}

<a class="btn btn-primary btn-lg" ng-href="#/add"><span class="glyphicon glyphicon-plus"></span></a>

<div class="modal" id="myModal" ng-controller="ModalCtrl" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div ng-view></div>
      </div>
    </div>
  </div>
</div>

<table class="table table-hover" ng-controller="UsersCtrl" ng-show="users">
  <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Type</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="user in users">
      <td>{[entity.meta.id]}</td>
      <td>{[entity.meta.type.name]}</td>
      <td>{[entity.title]}</td>
      <th>
        <span class="glyphicon glyphicon-trash" ng-click="delete(user)"></span>&nbsp;
        <span class="glyphicon glyphicon-pencil" ng-click="edit(user)"></span>
      </th>
    </tr>
  </tbody>
</table>

{% endblock %}